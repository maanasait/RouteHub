<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:background="#FFFFFF">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
      android:id="@+id/img_routeinfo"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="5dp"
      android:src="@mipmap/ic_launcher"/>

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <TextView
        android:id="@+id/txt_routeInfoName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Route name"
        android:textSize="20dp"/>

      <TextView
        android:id="@+id/txt_routeInfoNameDes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_routeInfoName"
        android:text="Route Desc"
        android:textSize="10dp"/>

      <ImageView
        android:id="@+id/img_accesibility"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@mipmap/accessibility"/>
    </RelativeLayout>


  </LinearLayout>

  <android.support.v7.widget.RecyclerView
    android:id="@+id/rlv_routesDirection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="15dp">

  </android.support.v7.widget.RecyclerView>


</LinearLayout>
